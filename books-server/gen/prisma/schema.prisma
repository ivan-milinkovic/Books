// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../gen/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Author {
  id          Int      @id @default(autoincrement())
  name        String
  bio         String
  dateOfBirth DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  books Book[]
}

model Genre {
  id          Int     @id @default(autoincrement())
  name        String
  forChildren Boolean

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  books Book[]
}

model Book {
  id          Int      @id @default(autoincrement())
  isbn        String   @unique
  title       String
  publishDate DateTime
  price       Float
  quantity    Int
  pageCount   Int
  forChildren Boolean
  image       String?
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  authors Author[]
  genres  Genre[]
}
